#
# Install unofficial casks
#

tap caskroom/homebrew-unofficial

cask install titanium-studio 2> /dev/null


#
# Install font casks
#

tap caskroom/fonts

cask install font-roboto 2> /dev/null
cask install font-noto-sans-japanese 2> /dev/null
cask install font-noto-sans 2> /dev/null
cask install font-noto-serif 2> /dev/null
cask install font-source-code-pro 2> /dev/null
cask install font-source-han-code-jp 2> /dev/null
cask install font-inconsolata 2> /dev/null


# Remove outdated versions from the cellar
cask cleanup
