##
## Install command-line tools using Homebrew need X11(XQuartz)
##

# Make sure we're using the latest Homebrew
update

# Upgrade any already-installed formulae
upgrade

# Install tools
install ghostscript --with-x11
install imagemagick --with-ghostscript --with-x11
#install https://gist.githubusercontent.com/ksato9700/0b3c71adafc256ddf280/raw/f48ac50bf8d1a16aa63606b137cd29b8fb1d7414/emacs.rb --japanese --cocoa --with-imagemagick
install https://gist.githubusercontent.com/ssugiyama/5ff88299efadd61415c5/raw/588c209dd8f3e5b99c7f39e149d9c70d0ab3be02/emacs-jp.rb --japanese --with-cocoa --srgb --with-gnutls --with-imagemagick --with-librsvg
install cask
install homebrew/x11/meld

# Add tap
tap sanemat/font
install ricty

tap homebrew/completions
install vagrant-completion

# Generate synbolic link for GUI applications
linkapps

# Remove outdated versions from the cellar
# and remove dead symlinks from the Homebrew prefix.
cleanup
prune
